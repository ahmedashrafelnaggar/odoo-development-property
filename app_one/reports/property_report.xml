<odoo>
    <record id="property_report" model="ir.actions.report">
        <field name="name">Property Report</field>
        <field name="model">property</field>
        <field name="report_type">qweb-pdf</field>
<!--        <field name="report_type">qweb-html</field>-->
        <field name="report_name">app_one.property_report_template</field>
        <field name="binding_model_id" ref="model_property"/>
        <field name="binding_type">report</field>
    </record>


    <template id="property_report_template">

        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="rec">
                <t t-call= "web.external_layout">
                    <div class="page">
                        <h1 style="color: black;">  Property  Report </h1>
                        <style>
                            table {
                            border-collapse: collapse;
                            width: 100%;
                            border: 1px solid #b3adad;
                            padding:5px;
                            }


                            table th {
                            text-align:center;
                            border: 1px solid #b3adad;
                            padding:5px;
                            background:#f0f0f0;
                            color:#313030;

                            }
                            table td{
                            border: 1px solid #b3adad;
                            text-align:center;
                            padding:5px;
                            background:#ffffff;
                            color:#313030;
                            }
                        </style>

                         <table>
                             <thead>
                                 <th colspan="4">General Info</th>

                             </thead>
                             <tbody>
                                 <tr>
                                     <td>Name</td>
                                     <td>  <t t-esc="rec.name"/>   </td>
<!--                                     <td>  <t t-esc="rec.name"/>   </td>-->
                                     <td>PostCode</td>
                                     <td><t t-esc="rec.post_code"/>  </td>
<!--                                     <td><t t-esc="rec.post_code"/>  </td>-->
                                 </tr>
                             </tbody>

                              <thead>
                                 <th colspan="4">Additional Info</th>

                             </thead>
                             <tbody>
                                 <tr>
                                     <td>Owner</td>
                                     <td>  <t t-esc="rec.owner_id.name"/>   </td>
<!--                                     <td>  <t t-esc="rec.owner_id"/>   </td>-->
                                     <td>Phone</td>
                                     <td> <t t-esc="rec.owner_phone"/>  </td>
<!--                                     <td><t t-esc="rec.owner_phone"/>  </td>-->
                                 </tr>
                             </tbody>
                         </table>

                        <br/>

                        <table>
                            <thead>
                                <th>Description </th>
                                <th> Area </th>
                            </thead>
                            <tbody>
                                <t t-foreach="rec.line_ids" t-as="line">
                                    <tr>
                                        <td>
                                            <t t-esc="line.description"/>
<!--                                            <span t-field="line.description"/>-->
                                        </td>
                                        <td>
                                            <t t-esc="line.area"/>
<!--                                            <span t-field="line.area"/>-->
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>